<%- include("../partials/head.ejs") %>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <%- include("../partials/navbar.ejs") %>
  
  <div class="max-w-xl mx-auto mt-10 p-8 bg-white rounded-2xl shadow-lg border border-gray-100">
    <h1 class="text-3xl font-bold mb-6 text-center text-teal-700 tracking-tight">
      <%= update ? "Update Task" : "Add New Task" %>
    </h1>

    <form action="<%= update ? '/update-task' : '/add-task' %>" method="POST" class="space-y-6">
      <input type="hidden" name="taskId" value="<%= task._id %>">
      
      <div class="space-y-2">
        <label for="task" class="block text-sm font-medium text-gray-700">
          Task Description
        </label>
        <div class="relative rounded-md shadow-sm">
          <input
            type="text"
            name="task"
            id="task"
            value="<%= update ? task.task : '' %>"
            placeholder="Enter your task here..."
            required
            class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-200 placeholder-gray-400"
          />
        </div>
        <p class="mt-1 text-sm text-gray-500">
          Describe your task in a clear and concise way
        </p>
      </div>

      <div class="pt-4">
        <button
          type="submit"
          class="w-full flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-colors duration-200"
        >
          <svg 
            class="w-5 h-5 mr-2" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="<%= update ? 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15' : 'M12 6v6m0 0v6m0-6h6m-6 0H6' %>"
            />
          </svg>
          <%= update ? "Update Task" : "Add Task" %>
        </button>
      </div>

      <% if (update) { %>
        <div class="text-center mt-4">
          <a 
            href="/" 
            class="text-sm text-gray-500 hover:text-teal-600 transition-colors duration-200"
          >
            Cancel and go back
          </a>
        </div>
      <% } %>
    </form>
  </div>
</body>
</html>